#!/bin/sh
django-admin collectstatic --noinput
curl https://intake.opbeat.com/api/v1/organizations/${DJANGO_OPBEAT_ORGANIZATION_ID}/apps/${DJANGO_OPBEAT_APP_ID}/releases/ \
  -H "Authorization: Bearer ${DJANGO_OPBEAT_SECRET_TOKEN}" \
  -d rev=`git log -n 1 --pretty=format:%H` \
  -d branch=`git rev-parse --abbrev-ref HEAD` \
  -d machine=`hostname` \
  -d status=machine-completed
gunicorn config.wsgi -c /app/gunicorn_conf.py
