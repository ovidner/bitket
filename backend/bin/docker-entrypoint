#!/bin/sh
# Don't fail on non-zero exit status (we don't care that much about Opbeat)
set +e

if [ -z "$OPBEAT_SECRET_TOKEN" ]; then
    curl -sS https://intake.opbeat.com/api/v1/organizations/${OPBEAT_ORGANIZATION_ID}/apps/${OPBEAT_APP_ID}/releases/ \
      -H "Authorization: Bearer ${OPBEAT_SECRET_TOKEN}" \
      -d rev=`git log -n 1 --pretty=format:%H` \
      -d branch=`git rev-parse --abbrev-ref HEAD` \
      -d machine=`hostname` \
      -d status=machine-completed
fi

# Fail on non-zero exit status
set -e

exec "$@"
